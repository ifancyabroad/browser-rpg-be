{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"baseUrl": "src",
		"paths": {
			"@config/*": ["config/*"],
			"@data/*": ["data/*"],
			"@utils/*": ["utils/*"],
			"@game/*": ["game/*"],
			"@loaders/*": ["loaders/*"],
			"@middleware/*": ["middleware/*"],
			"@models/*": ["models/*"],
			"@routes/*": ["routes/*"],
			"@services/*": ["services/*"],
			"@validation/*": ["validation/*"]
		}
	},
	"include": ["src"]
}
